<html>
  <head>
    <title>Maya - the support portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    params[:controller],  media: 'all', 'data-turbolinks-track' => true if stylesheet_exists?(params[:controller]) %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag params[:controller], 'data-turbolinks-track' => 'reload'  if javascript_exists?(params[:controller]) %>
    <%= yield :additional_meta_tags %>
  </head>
</html>

